<%= render 'partials/notice_messages', object: @product %>

<%= form_for ["admin",@product],  html: { multipart: true } do |f| %>
  <p>
    <%= f.label "Imagen" %>
     <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label "Producto" %><br />
    <%= f.text_field :producto %>
  </p>
    <p>
    <%= f.label "Categoria" %><br />
    <%= f.select  :category_id, Category.all.map { |c| [c.nombre_categoria,c.id] }  %>
  </p>
    <p>
    <%= f.label "Codigo" %><br />
    <%= f.text_field :codigo_producto %>
  </p>
    <p>
    <%= f.label "Descripcion" %><br/>
    <%= f.text_area :descripcion, :rows => 7, :cols => 20 %>
  </p>
  <p>
  <%= f.submit "Me gusta", :votos=>"like"%>
  </p>
  <p>
    <%= f.submit "crear" %>
  </p>
<% end %>
