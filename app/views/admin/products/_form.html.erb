<center>
  <%= render 'partials/notice_messages', object: @product %>
      <%= form_for ["admin",@product],  html: { multipart: true , class: "form-horizontal"} do |f| %>
        <div class="form-group">
           <h3>
            <%= f.label "Imagen", class: "col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3  label label-default control-label col-lg-1 col-md-1"  %>
           </h3>
            <div class="col-lg-5 col-md-5" >
               <%= f.file_field :image, class: "form-control"%>
            </div>
        </div>
        <div class="form-group">
           <h3>
            <%= f.label "producto", class: "col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3  label label-default control-label col-lg-1 col-md-1"  %>
           </h3>
            <div class="col-lg-5 col-md-5">
               <%= f.text_field :producto , class: "form-control"%>
            </div>
        </div>
          <div class="form-group">
            <h3>
              <%= f.label "Categoria", class: "col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3  label label-default control-label col-lg-1 col-md-1"  %>
            </h3>
            <div class="col-lg-5 col-md-5">
               <%= f.select  :category_id, Category.all.map { |c| [c.nombre_categoria,c.id] }, {}  , class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <h3>
              <%= f.label "Codigo", class: "col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3  label label-default control-label col-lg-1 col-md-1"  %>
            </h3>
            <div class="col-lg-5 col-md-5">
               <%= f.text_field  :codigo_producto , class: "form-control"%>
            </div>
        </div>
         <div class="form-group">
            <h3>
              <%= f.label "Descripcion", class: "col-lg-offset-2 col-lg-2 col-md-offset-2 col-md-2  label label-default control-label col-lg-2 col-md-2"  %>
            </h3>
            <div class="col-lg-5 col-md-5">
               <%= f.text_area :descripcion, :rows => 7, :cols => 20, class: "form-control" %>
            </div>
        </div>



         <div class="form-group">
            <h3>
              <%= f.label "Etiquta", class: "col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3  label label-default control-label col-lg-1 col-md-1"  %>
            </h3>
            <div class="col-lg-5 col-md-5">
               <%= f.collection_select  :label_ids , Label.order(:nombre_de_etiqueta), :id, :nombre_de_etiqueta, {multiple: true},  class: "form-control"%>
            </div>
         </div>





         <div class="form-group">
           <div class="col-lg-offset-4 col-lg-2 col-md-offset-4 col-md-2" >
            <%= f.submit "Me gusta", :votos=>"like",class: "btn btn-default btn-lg active form-control" %>
           </div>
        </div>
        <div class="form-group">
           <div class="col-lg-offset-4 col-lg-2 col-md-offset-4 col-md-2" >
            <%= f.submit "crear", class: "control-label col-lg-6 col-md-6 btn btn-default btn-lg active" %>
         </div>
        </div>
      <% end %>
</center>
